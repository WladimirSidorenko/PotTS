<?xml version="1.0" encoding="UTF-8"?>
<annotationscheme>
  <attribute id="diff_type" name="diff_type" type="nominal_button"
	     text="Difference type of annotation.">
    <value id="diff_none" name="none"/>
    <value id="diff_missing" name="missing"/>
    <value id="diff_redundant" name="redundant"/>
  </attribute>

  <attribute id="emo_polarity" name="polarity" type="nominal_button" text="Polarity of emotional expression">
    <value id="value_emo_polarity_pos" name="positive"/>
    <value id="value_emo_polarity_neg" name="negative"/>
  </attribute>

  <attribute id="emo_intensity" name="intensity" type="nominal_button"
	     text="Intensity of emotional expression">
    <value id="value_emo_intensity_1" name="medium"/>
    <value id="value_emo_intensity_0" name="weak"/>
    <value id="value_emo_intensity_2" name="strong"/>
  </attribute>

  <attribute id="emo_sarcasm" name="sarcasm" type="nominal_button"
	     text="Boolean value marking whether given emotional expression is meant sarcastically">
    <value id="value_sentiment_sarcasm_false" name="false"/>
    <value id="value_sentiment_sarcasm_true"  name="true"/>
  </attribute>

  <attribute id="sentiment_ref" name="sentiment_ref"
	     type="markable_pointer" color="blue" width="1" style="lcurve"
	     max_size="1"
	     target_domain="sentiment"
	     point_to_markable_text="Mark sentiment as pertaining to emotional expression"
	     remove_pointer_to_markable_text="Unmark sentiment as pertaining to emotional expression">
    <value id="sentiment_ref_not_set" name="not_set"/>
    <value id="sentiment_ref_set" name="set"/>
  </attribute>

  <attribute id="sentiment_subjfact" name="subjective_fact"
	     type="nominal_button" text="Emotional expression is meant sarcastically">
    <value id="sentiment_subjfact_false" name="false"/>
    <value id="sentiment_subjfact_true" name="true"/>
  </attribute>
</annotationscheme>
